# Environment Configuration Template
# Copy to .env and fill in your values

# ==========================================
# PLATFORM API CREDENTIALS
# ==========================================

# Polymarket
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYGON_RPC_URL=https://polygon-rpc.com

# Kalshi
KALSHI_API_KEY=your_kalshi_api_key
KALSHI_API_SECRET=your_kalshi_secret

# ==========================================
# RISK MANAGEMENT
# ==========================================

# Maximum position size as fraction of bankroll (0.25 = 25%)
MAX_POSITION_PCT=0.25

# Kelly Criterion safety multiplier (0.5 = Half-Kelly)
KELLY_MULTIPLIER=0.5

# Maximum daily risk exposure (0.25 = 25%)
MAX_DAILY_RISK=0.25

# Minimum win rate to continue trading (0.45 = 45%)
MIN_WIN_RATE=0.45

# ==========================================
# EXECUTION PARAMETERS
# ==========================================

# Maximum acceptable slippage (0.005 = 0.5%)
MAX_SLIPPAGE_PCT=0.005

# Execution timeout in milliseconds
EXECUTION_TIMEOUT_MS=5000

# WebSocket reconnection interval
WEBSOCKET_RECONNECT_MS=1000

# Minimum profit threshold to execute (0.001 = 0.1%)
MIN_PROFIT_THRESHOLD=0.001

# ==========================================
# MONITORING
# ==========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable metrics collection
METRICS_ENABLED=true

# Dashboard port
DASHBOARD_PORT=3000

# ==========================================
# TRADING MODE
# ==========================================

# Set to true for paper trading (no real trades)
DRY_RUN=true

# Trading mode: CONSERVATIVE, MODERATE, AGGRESSIVE
TRADING_MODE=CONSERVATIVE

# ==========================================
# DATABASE (Optional)
# ==========================================

# PostgreSQL for historical data
# DATABASE_URL=postgresql://user:pass@localhost:5432/arbitrage

# Redis for caching
# REDIS_URL=redis://localhost:6379
